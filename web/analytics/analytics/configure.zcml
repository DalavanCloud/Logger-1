<configure xmlns="http://pylonshq.com/pyramid">

  <include package="pyramid_zcml" />

<!--
*********************************
Server APP
*********************************
-->

  <route
    name="site"
    pattern="/analytics/{instance}"
    view="analytics.views.site"
    renderer="jsonp"
  />

  <route
    name="site_option"
    pattern="/analytics/{instance}/{option:[a-z]{3}}"
    view="analytics.views.site_option"
    renderer="jsonp"
  />

  <route
    name="site_key"
    pattern="/analytics/{instance}/{option:[a-z]{3}}/{key:[a-zA-Z0-9]+}"
    view="analytics.views.site_key"
    renderer="jsonp"
  />

  <route
    name="site_option_range"
    pattern="/analytics/{instance}/{option:[a-z]{3}}/{start_range:\d+}-{end_range:\d+}"
    view="analytics.views.site_option_range"
    renderer="jsonp"
  />

<!--
*********************************
Client APP
*********************************
-->

  <route
    name="site_client"
    pattern="/analytics/client/{instance}/{index:[a-z]{3}}/{chart:[a-zA-Z]+}/{options:.*}"
    view="analytics.client.views.site_client"
  />

  <route
    name="site_client_range"
    pattern="/analytics/client/{instance}/{index:[a-z]{3}}/{start_range:\d+}-{end_range:\d+}/{chart:[a-zA-Z]+}/{options:.*}"
    view="analytics.client.views.site_client_range"
  />

</configure>
